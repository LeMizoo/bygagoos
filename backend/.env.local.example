# =============================================
# BYGAGOOS INK - BACKEND LOCAL CONFIGURATION
# COPIEZ CE FICHIER EN .env.local
# =============================================

# Server Configuration
PORT=3002
NODE_ENV=development
API_URL=http://localhost:3002
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Database Configuration
# Option 1: Local MongoDB
MONGODB_URI=mongodb://localhost:27017/bygagoos_ink
DATABASE_URL=mongodb://localhost:27017/bygagoos_ink

# Option 2: MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bygagoos_ink?retryWrites=true&w=majority

# Security (NEVER USE THESE IN PRODUCTION)
JWT_SECRET=local_dev_secret_change_this_immediately
JWT_REFRESH_SECRET=local_dev_refresh_secret_change_this
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=10

# Default Admin User (will be created on first startup)
ADMIN_EMAIL=admin@bygagoos.mg
ADMIN_PASSWORD=Admin@2024
ADMIN_NAME=Administrateur BYGAGOOS

# Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
ENABLE_FILE_VALIDATION=true

# Email Configuration (Optional)
# For development, you can use services like Ethereal or Mailtrap
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=your_ethereal_username
SMTP_PASS=your_ethereal_password
EMAIL_FROM=noreply@bygagoos.mg

# Logging
LOG_LEVEL=debug
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/backend.log

# Development Features
ENABLE_SWAGGER=true  # API documentation at /api-docs
ENABLE_SEED_DATA=true  # Populate database with sample data
ENABLE_CORS=true
ENABLE_HEALTH_CHECKS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000

# Monitoring
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=false